<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray"/> <!-- Darker shade when pressed -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black"/> <!-- Default color black -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white"
    android:gravity="center_horizontal">

    <!-- Profile Image (Top Center) -->
    <ImageView
        android:id="@+id/student_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile1"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10dp"/>

    <!-- Student Name (Center) -->
    <TextView
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shubham Kailsh Bante"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp"/>

    <!-- Details Section (Left Aligned) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:gravity="start">

        <TextView
            android:id="@+id/student_Enrollment_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enrollment:- "
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/student_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Branch             :- "
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/student_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email                :- "
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/student_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile              :- "
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgraund4">

    <!-- Event Title -->
    <TextView
        android:id="@+id/event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EVENTS"
        android:textStyle="bold|italic"
        android:textSize="40sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:shadowColor="#ffffff"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="10" />

    <!-- Event Boxes Layout -->
    <GridLayout
        android:id="@+id/event_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_title"
        android:layout_marginTop="80dp"
        android:columnCount="2"
        android:padding="16dp">

        <!-- Sports Box -->
        <LinearLayout
            android:id="@+id/sport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/border_black"
            android:orientation="vertical"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sports"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPORTS"
                android:textColor="#00a1e9"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center" />
        </LinearLayout>

        <!-- Conference Box -->
        <LinearLayout
            android:id="@+id/conference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/border_black"
            android:orientation="vertical"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/conference"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFERENCE"
                android:textColor="#00a1e9"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center" />
        </LinearLayout>

        <!-- Cultural Box -->
        <LinearLayout
            android:id="@+id/cultural"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/border_black"
            android:orientation="vertical"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/culture"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CULTURAL"
                android:textColor="#00a1e9"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center" />
        </LinearLayout>

        <!-- Placement Box -->
        <LinearLayout
            android:id="@+id/placement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/border_black"
            android:orientation="vertical"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/placement"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLACEMENT"
                android:textColor="#00a1e9"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center" />
        </LinearLayout>
    </GridLayout>

</RelativeLayout>